                <%=criminal.img.data.toString('base64')%>" alt="" class="pic">
                <div class="details">
                    <h3>Name:
                        <%=criminal.name%>
                    </h3>
                    <p>Crime committed:
                        <%=criminal.crimename%>
                    </p>
                    <p>Last seen:
                        <%=criminal.lastseen%>
                    </p>
            </div>
    </div>

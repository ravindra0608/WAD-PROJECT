    <% let wanted=[]; %>
    <% let arrested=[]; %>
    <% let ontrail=[]; %>

    <% criminalsList.forEach((criminal)=>{%>
        <%if(criminal.status==="Wanted"){%>
            <% wanted.push(criminal) %>
        <%}%>
        <%if(criminal.status==="Arrested"){%>
            <% arrested.push(criminal) %>
        <%}%>
        <%if(criminal.status==="Ontrail"){%>
            <% ontrail.push(criminal) %>
        <%}%>
    <% }); %>

    <div id="wanted"><img src="images/wanted.png" alt=""></div>
    <div class="criminals">
        <% wanted.forEach((criminal)=>{%>
            <div class="criminal <%=criminal.dangerlevel%> c1">
